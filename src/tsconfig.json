{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,

		"noEmit": true,
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"moduleDetection": "force",
		"skipLibCheck": true,
		"paths": {
			"@bp": ["./bp/*"],
			"@rp": ["./rp/*"],
			"@augumentations/*": ["./bp/scripts/augumentations/*"],
			"@lib/*": ["./bp/scripts/lib/*"],
			"@server/*": ["./bp/scripts/server/*"]
		}
	}
}
