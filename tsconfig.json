{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023"],
		"rootDir": "./src/",
		"paths": {
			"@lib/*": ["./src/bp/scripts/lib/*"],
			"@logic/*": ["./src/bp/scripts/logic/*"]
		},
		"moduleDetection": "force",
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": true,

		"strict": true,
		"strictNullChecks": true,

		"module": "Preserve",
		"moduleResolution": "Bundler",
		"noEmit": true
	},
	"include": ["./src/**/*"]
}
